@model VacationTaskExtra.Models.PersonelModel

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="SelectedRole">Select Role</label>
        <select id="SelectedRole" name="selectedRole" asp-items="ViewBag.Roles" class="form-control"></select>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>